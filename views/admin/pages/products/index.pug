extends ../../layouts/default.pug

block main
    h1 Product list page

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm
        .card-body
            each item in filterStatus
                button(
                    class=`btn btn-sm ml-1 btn-outline-success ${item.class}`
                    button-status= item.status
                    ) #{item.name}

    .card.mb-3 
        .card-header List product
        .card-body
            table.table.table-hover.table-sm
                thead
                    tr
                        th STT
                        th Image
                        th Title
                        th Price
                        th Status
                        th Action
                    
                tbody
                    each item, index in products
                        tr
                            td #{index + 1}
                            td
                                img(
                                    src=item.thumbnail 
                                    alt=item.title 
                                    width="100px" 
                                    height="auto"
                                )
                            td #{item.title}
                            td #{item.price}$
                            td 
                                if(item.status == "active")
                                    a(href="a" class="bg bg-success badge badge-success text-decoration-none") Active
                                else 
                                    a(href="a" class="bg bg-danger badge badge-danger text-decoration-none") Inactive
                                
                            td 
                                button(class="btn btn-warning btn-sm") Sửa
                                button(class="btn btn-danger btn-sm ml-1") Xóa